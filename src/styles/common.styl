html *,
html *::before,
html *::after
  box-sizing: border-box

.su-input
  position: relative
  display: inline-block
  width: input-width
  line-height: 1
  font-size: input-font-size
  text-align: left
  z-index: 1

  .su-input__field
    display: block
    width: 100%
    height: field-height
    background: transparent
    border: none
    color: inherit
    font-size: field-font-size
    font-weight: bold

    &:focus
      outline: none

  .su-input__label
    display: block
    width: 100%
    font-size: label-font-size
    font-weight: bold
    color: label-color

  .su-input__label-content
    display: block
    width: 100%
