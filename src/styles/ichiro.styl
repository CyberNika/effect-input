
input-padding = 0.25em

label-padding-vertical = ((input-height - label-font-size) / 2) + input-padding
label-content-active-translateY = -3.15em

input-margin-top = - label-content-active-translateY / 2 + label-font-size / 2 * 0.8

.effect-input--ichiro
  padding: input-padding
  margin-top: input-margin-top

  .effect-input__field
    padding: 0 0.55em
    background-color: #f0f0f0
    color: #7f8994
    opacity: 0
    transform: scale3d(1, 0, 1)
    transform-origin: 50% 100%
    transition: transform 0.3s, opacity 0.3s

  .effect-input__label
    position: absolute
    left: 0
    top: 0
    height: 100%
    padding: label-padding-vertical 1.2em
    cursor: text

    &::before
      content: ""
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
      background-color: #fff
      transform-origin: 50% 100%
      transition: transform 0.3s
      z-index: -1

  .effect-input__label-content
    transform-origin: left bottom
    transition: transform 0.3s

  // 激活状态
  &.effect-input--filled .effect-input__field,
  .effect-input__field:focus
    transform: scale3d(1, 1, 1)
    opacity: 1

  &.effect-input--filled .effect-input__label,
  .effect-input__field:focus + .effect-input__label

    &::before
      transform: scale3d(1, 1.4, 1)

    .effect-input__label-content
      transform: translate3d(0, label-content-active-translateY, 0) scale3d(0.8, 0.8, 1) translateZ(1px)
