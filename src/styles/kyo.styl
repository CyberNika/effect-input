

.effect-input--kyo
  z-index: 100

  .effect-input__field
    padding: 0 (field-height / 2)
    border-radius: field-height
    background-color: #fff
    color: #535d92

  .effect-input__label
    padding: 0.65em 0 0.65em (field-height / 1.5)

    &::after
      content: ""
      position: fixed
      top: 0
      left: 0
      width: 100%
      height: 100%
      background-color: rgba(11, 43, 205, 0.6)
      opacity: 0
      transition: opacity 0.3s
      pointer-events: none
      z-index: -1

  // 激活状态
  .effect-input__field:focus
    & + .effect-input__label
      color: #fff

      &::after
        opacity: 1
