
label-content-padding = 0.95em 0.15em 0.75em
isao-transition-timing-function = cubic-bezier(0.2, 1, 0.3, 1)

.effect-input--isao

  .effect-input__field
    padding: 0.75em 0.1em 0
    color: #afb3b8

  .effect-input__label
    position: relative
    color: #dadada
    overflow: hidden

    &::before
      content: ""
      position: absolute
      left: 0
      top: 0
      width: 100%
      height: 0.4em
      background: #dadada
      transform: scale3d(1, 0.4, 1)
      transform-origin: 50% 100%
      transition: transform 0.3s, background-color 0.3s
      transition-timing-function: isao-transition-timing-function

    &::after
      content: attr(data-content)
      position: absolute
      top: 0
      left: 0
      padding: label-content-padding
      color: #da7071
      opacity: 0
      transform: translate3d(0, 50%, 0)
      transition: opacity 0.3s, transform 0.3s
      transition-timing-function: isao-transition-timing-function

  .effect-input__label-content
    padding: label-content-padding
    transition: opacity 0.3s, transform 0.3s
    transition-timing-function: isao-transition-timing-function

  // 激活状态
  &.effect-input--filled .effect-input__label,
  .effect-input__field:focus + .effect-input__label
    &::before
      background-color: #da7071
      transform: scale3d(1, 1, 1)

    &::after
      opacity: 1
      transform: translate3d(0, 0, 0)

    .effect-input__label-content
      opacity: 0
      transform: translate3d(0, -50%, 0)
