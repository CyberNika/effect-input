
active-label-content-translateY = -1.5em

input-margin-top = 1em

juro-color = #1784cd

.effect-input--juro
  margin-top: input-margin-top

  .effect-input__field
    position: absolute;
    bottom: 0.35em
    padding: 0 1em
    color: juro-color
    font-size: 1em

  .effect-input__label
    background: #fff
    cursor: text

    &::before
      content: ""
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
      border: 0 solid transparent
      transition: border-width 0.3s, border-color 0.3s

  .effect-input__label-content
    padding: 2em input-margin-top
    transition: transform 0.3s, color 0.3s
    text-rendering: geometricPrecision
    transform-origin: 0 50%

  // 激活状态
  &.effect-input--filled .effect-input__label,
  .effect-input__field:focus + .effect-input__label
    &::before
      border-width: 0.5em
      border-color: juro-color
      border-top-width: 2em

    .effect-input__label-content
      color: #fff
      transform: translate3d(0, active-label-content-translateY, 0) scale3d(0.75, 0.75, 1) translateZ(1px)
